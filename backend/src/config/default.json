{
  "server": {
    "port": 3001,
    "host": "0.0.0.0",
    "environment": "development"
  },
  "database": {
    "host": "localhost",
    "port": 5432,
    "name": "dex",
    "user": "postgres",
    "password": "",
    "pool": {
      "min": 5,
      "max": 20,
      "idleTimeoutMillis": 30000
    }
  },
  "security": {
    "corsOrigin": ["http://localhost:3000"],
    "sessionTimeout": 1800000,
    "maxLoginAttempts": 5,
    "lockoutDuration": 900000
  },
  "cache": {
    "ttl": 300,
    "maxSize": 1000,
    "compression": true
  },
  "logging": {
    "level": "info",
    "file": true,
    "maxFiles": 10,
    "maxSize": "10MB"
  },
  "trading": {
    "maxOrderSize": 1000000,
    "minOrderSize": 0.0001,
    "feeRate": 0.001,
    "slippageTolerance": 0.05
  },
  "performance": {
    "requestTimeout": 30000,
    "maxConcurrentRequests": 100,
    "compressionThreshold": 1024
  },
  "monitoring": {
    "healthCheckInterval": 30000,
    "metricsInterval": 60000,
    "alertThresholds": {
      "memoryUsage": 80,
      "errorRate": 5,
      "responseTime": 5000
    }
  }
}