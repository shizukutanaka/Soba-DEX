# Soba DEX - Development Environment Configuration
# Version: 2.6.1
# Copy this file to .env for local development

# =====================
# APPLICATION
# =====================
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# =====================
# DATABASE
# =====================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:password@localhost:5432/soba_dex

# Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=30000

# =====================
# REDIS CACHE
# =====================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache settings
CACHE_ENABLED=true
CACHE_TTL=300000
CACHE_MAX_SIZE=1000

# =====================
# SECURITY
# =====================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
API_KEY_HMAC_SECRET=your-super-secret-api-key-hmac-change-this-in-production-min-32-chars
SESSION_SECRET=your-super-secret-session-key-change-this-in-production-min-32-chars

# Session settings
SESSION_MAX_AGE=86400000

# =====================
# CORS
# =====================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# =====================
# LOGGING
# =====================
LOG_LEVEL=debug
LOG_DIR=./logs
LOG_MAX_FILES=7d
LOG_MAX_SIZE=20m

# =====================
# RATE LIMITING
# =====================
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# =====================
# FEATURE FLAGS
# =====================
USE_MOCK_DATA=true
ENABLE_SWAGGER=true
ENABLE_WEBSOCKET=false

# =====================
# BLOCKCHAIN
# =====================
# Ethereum RPC endpoints (use Infura, Alchemy, or local node)
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
ETH_CHAIN_ID=1

# Alternative providers for failover
ETH_RPC_URL_BACKUP=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# =====================
# EXTERNAL APIs
# =====================
# CoinGecko API (no key required for free tier)
COINGECKO_API_URL=https://api.coingecko.com/api/v3

# Etherscan API (for transaction verification)
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY
ETHERSCAN_API_URL=https://api.etherscan.io/api

# =====================
# DEVELOPMENT TOOLS
# =====================
# Enable verbose logging
DEBUG=soba:*

# Prisma settings
PRISMA_LOG_LEVEL=info
