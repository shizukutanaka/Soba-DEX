{
  "name": "soba-backend",
  "version": "3.9.0",
  "description": "Backend API for Soba DEX Platform - Frontend Integration & A/B Testing Framework",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js --watch src --ignore src/logs",
    "dev:debug": "nodemon --inspect src/server.js",
    "dev:watch": "nodemon --watch src --ext js,json,env --ignore src/logs --ignore src/tests",
    "dev:hot": "nodemon --exec \"node -r dotenv/config\" src/server.js",
    "dev:profile": "nodemon --exec \"node --prof src/server.js\"",
    "debug": "node --inspect=0.0.0.0:9229 src/server.js",
    "debug:brk": "node --inspect-brk=0.0.0.0:9229 src/server.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --runInBand",
    "test:ci": "jest --ci --coverage --watchAll=false --runInBand",
    "test:debug": "node --inspect node_modules/.bin/jest --runInBand",
    "lint": "eslint src/ --ext .js --ignore-pattern node_modules/",
    "lint:fix": "eslint src/ --ext .js --fix --ignore-pattern node_modules/",
    "lint:watch": "esw src/ --ext .js --watch",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "build": "echo 'No build step required for Node.js'",
    "docs:generate": "node scripts/generateDocs.js",
    "docs:serve": "node scripts/serveDocs.js",
    "prod": "NODE_ENV=production npm start",
    "pm2:start": "pm2 start src/server.js --name soba-api",
    "pm2:stop": "pm2 stop soba-api",
    "pm2:restart": "pm2 restart soba-api",
    "pm2:logs": "pm2 logs soba-api",
    "pm2:monit": "pm2 monit",
    "docker:build": "docker build -t soba-backend .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "clean": "rm -rf node_modules && npm install",
    "health": "node -e \"console.log('Backend health check passed')\"",
    "perf:audit": "node scripts/performance-audit.js",
    "analyze:bundle": "echo 'Bundle analysis not applicable for Node.js backend'",
    "validate-env": "node validate-env.js",
    "security:check": "npm audit && echo 'Security check complete'",
    "security:scan": "node -e \"require('./src/utils/securityScanner').SecurityScanner().runFullScan()\"",
    "performance:report": "node scripts/generate-performance-report.js",
    "env:validate": "node .env.validation.js",
    "docker:build:multi": "docker build -f Dockerfile -t soba-backend:latest --target production .",
    "logs:follow": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "prestart": "node .env.validation.js || true",
    "setup:dev": "npm install && npm run validate-env && npm run lint",
    "setup:prod": "npm ci && npm run validate-env && npm test",
    "db:migrate": "node scripts/migrate-db.js",
    "db:seed": "node scripts/seed-db.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "api:generate": "node scripts/generate-api-client.js",
    "hooks:install": "node scripts/install-git-hooks.js",
    "hooks:uninstall": "node scripts/uninstall-git-hooks.js",
    "coverage:report": "open coverage/lcov-report/index.html",
    "analyze:deps": "node scripts/analyze-dependencies.js",
    "bundle:analyze": "echo 'Bundle analysis for Node.js backend'",
    "memory:profile": "node --max-old-space-size=4096 --expose-gc scripts/memory-profile.js",
    "cpu:profile": "node --cpu-prof scripts/cpu-profile.js",
    "heap:snapshot": "node --heap-prof scripts/heap-snapshot.js",
    "type:check": "tsc --noEmit --skipLibCheck",
    "validate:all": "npm run lint && npm run test && npm run security:check",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.65.0",
    "@opentelemetry/exporter-jaeger": "^2.1.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.206.0",
    "@opentelemetry/exporter-zipkin": "^2.1.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.206.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "@prisma/client": "^5.22.0",
    "apollo-server-express": "^3.13.0",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dataloader": "^2.2.3",
    "dotenv": "^16.6.1",
    "ethers": "^6.13.5",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "geoip-lite": "^1.4.9",
    "graphql": "^16.11.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "natural": "^6.12.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.9",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "qs": "^6.13.1",
    "redis": "^5.8.3",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "web3": "^4.13.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "chai": "^4.5.0",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prisma": "^5.22.0",
    "sinon": "^21.0.0",
    "supertest": "^7.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
