{
  "name": "soba-frontend",
  "version": "2.1.0",
  "description": "Frontend for Soba DEX Platform",
  "private": true,
  "dependencies": {
    "@coinbase/wallet-sdk": "^3.9.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.25",
    "@types/react-dom": "^18.3.7",
    "@walletconnect/web3-provider": "^1.8.0",
    "dompurify": "^3.3.0",
    "ethers": "^6.13.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^7.1.1",
    "react-scripts": "^0.0.0",
    "typescript": "^5.7.2",
    "web-vitals": "^4.2.4",
    "zod": "^3.25.76"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:sand": "REACT_APP_ENTRY=sand react-scripts start",
    "build": "cross-env GENERATE_SOURCEMAP=false react-scripts build",
    "build:sand": "cross-env GENERATE_SOURCEMAP=false REACT_APP_ENTRY=sand react-scripts build",
    "build:analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "test": "react-scripts test",
    "test:ci": "react-scripts test --ci --coverage --watchAll=false",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "serve": "npx serve -s build -l 3000",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "clean": "rm -rf build node_modules && npm install",
    "preview": "npm run build && npm run serve"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globals": "^16.4.0",
    "typescript-eslint": "^8.21.0"
  }
}
