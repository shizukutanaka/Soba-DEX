{
  "name": "dex-mobile",
  "version": "1.0.0",
  "description": "Basic mobile application for DEX trading platform with essential features",
  "private": true,
  "homepage": "https://your-domain.com/mobile",
  "keywords": ["react-native", "dex", "trading", "cryptocurrency", "mobile"],
  "author": "Your Organization",
  "license": "MIT",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace DEXMobile.xcworkspace -scheme DEXMobile -configuration Release -derivedDataPath build",
    "clean": "react-native clean-project-auto",
    "postinstall": "cd ios && pod install"
  },
  "dependencies": {
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/drawer": "^6.6.6",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@reduxjs/toolkit": "^1.9.7",
    "axios": "^1.6.0",
    "react": "18.2.0",
    "react-native": "^0.82.1",
    "@react-native-async-storage/async-storage": "^1.19.5",
    "@react-native-community/netinfo": "^10.0.0",
    "react-native-background-fetch": "^4.2.2",
    "react-native-background-timer": "^2.4.1",
    "react-native-biometrics": "^3.0.1",
    "react-native-exit-app": "^2.0.0",
    "react-native-keep-awake": "^4.0.0",
    "react-native-keychain": "^8.1.2",
    "react-native-numeric-input": "^1.9.1",
    "react-native-phone-number-input": "^2.1.0",
    "react-native-randombytes": "^3.6.1",
    "react-native-restart": "^0.0.27",
    "react-native-safe-area-context": "^5.6.1",
    "react-native-screens": "^4.17.1",
    "react-redux": "^8.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/runtime": "^7.28.4",
    "@react-native/eslint-config": "^0.72.2",
    "@react-native/metro-config": "^0.72.11",
    "@tsconfig/react-native": "^3.0.0",
    "@types/react": "^18.2.37",
    "@types/react-test-renderer": "^18.0.6",
    "babel-jest": "^29.7.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "metro-react-native-babel-preset": "0.77.0",
    "prettier": "^3.1.0",
    "react-test-renderer": "18.2.0",
    "typescript": "5.2.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@9.8.1"
}
