{
  "dashboard": {
    "title": "Security Monitor - Overview Dashboard",
    "tags": ["security", "overview"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Attack Rate (per minute)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "rate(security_events_total[1m]) * 60",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Events/min" },
          { "format": "short" }
        ]
      },
      {
        "id": 2,
        "title": "Attack Distribution by Type",
        "type": "piechart",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "sum by (type) (security_events_total)",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Blocked vs Allowed Requests",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "sum(security_events_blocked_total)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 100, "color": "yellow" },
                { "value": 1000, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Active Incidents",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 8 },
        "targets": [
          {
            "expr": "sum(security_incidents_active)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 5, "color": "yellow" },
                { "value": 10, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Threat Intelligence Score",
        "type": "gauge",
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "avg(threat_intelligence_score)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 50, "color": "yellow" },
                { "value": 80, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "ML Prediction Accuracy",
        "type": "gauge",
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 8 },
        "targets": [
          {
            "expr": "ml_prediction_accuracy * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 80, "color": "yellow" },
                { "value": 95, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Top Attack Sources (by IP)",
        "type": "table",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
        "targets": [
          {
            "expr": "topk(10, sum by (ip) (security_events_total))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "ip": "IP Address",
                "Value": "Attack Count"
              }
            }
          }
        ]
      },
      {
        "id": 8,
        "title": "Attack Severity Timeline",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
        "targets": [
          {
            "expr": "sum by (severity) (rate(security_events_total[5m]))",
            "legendFormat": "{{severity}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Events/sec" },
          { "format": "short" }
        ],
        "stack": true
      },
      {
        "id": 9,
        "title": "Response Time (P95)",
        "type": "graph",
        "gridPos": { "h": 6, "w": 8, "x": 0, "y": 20 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_ms_bucket[5m]))",
            "legendFormat": "P95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_ms_bucket[5m]))",
            "legendFormat": "P50",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "ms", "label": "Response Time" },
          { "format": "short" }
        ]
      },
      {
        "id": 10,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": { "h": 6, "w": 8, "x": 8, "y": 20 },
        "targets": [
          {
            "expr": "process_resident_memory_bytes / 1024 / 1024",
            "legendFormat": "RSS (MB)",
            "refId": "A"
          },
          {
            "expr": "nodejs_heap_size_used_bytes / 1024 / 1024",
            "legendFormat": "Heap Used (MB)",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "decmbytes", "label": "Memory" },
          { "format": "short" }
        ]
      },
      {
        "id": 11,
        "title": "Cache Hit Rate",
        "type": "graph",
        "gridPos": { "h": 6, "w": 8, "x": 16, "y": 20 },
        "targets": [
          {
            "expr": "rate(cache_hits_total[5m]) / (rate(cache_hits_total[5m]) + rate(cache_misses_total[5m])) * 100",
            "legendFormat": "Hit Rate",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "percent", "label": "Hit Rate", "max": 100, "min": 0 },
          { "format": "short" }
        ]
      },
      {
        "id": 12,
        "title": "Database Connection Pool",
        "type": "graph",
        "gridPos": { "h": 6, "w": 12, "x": 0, "y": 26 },
        "targets": [
          {
            "expr": "pg_pool_size",
            "legendFormat": "Pool Size",
            "refId": "A"
          },
          {
            "expr": "pg_pool_idle",
            "legendFormat": "Idle",
            "refId": "B"
          },
          {
            "expr": "pg_pool_waiting",
            "legendFormat": "Waiting",
            "refId": "C"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Connections" },
          { "format": "short" }
        ]
      },
      {
        "id": 13,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": { "h": 6, "w": 12, "x": 12, "y": 26 },
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "5xx Errors",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{status=~\"4..\"}[5m])",
            "legendFormat": "4xx Errors",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Errors/sec" },
          { "format": "short" }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [0.05],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "5m",
          "frequency": "1m",
          "handler": 1,
          "name": "High Error Rate",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 14,
        "title": "SOAR Playbook Executions",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 32 },
        "targets": [
          {
            "expr": "sum(soar_playbook_executions_total)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 15,
        "title": "Compliance Score",
        "type": "gauge",
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 32 },
        "targets": [
          {
            "expr": "avg(compliance_score) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 70, "color": "yellow" },
                { "value": 90, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 16,
        "title": "Forensics Evidence Collected",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 32 },
        "targets": [
          {
            "expr": "sum(forensics_evidence_total)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 17,
        "title": "System Health Status",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 32 },
        "targets": [
          {
            "expr": "health_status",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "type": "value", "value": "0", "text": "Critical" },
              { "type": "value", "value": "1", "text": "Degraded" },
              { "type": "value", "value": "2", "text": "Healthy" }
            ],
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 1, "color": "yellow" },
                { "value": 2, "color": "green" }
              ]
            }
          }
        }
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    }
  }
}
